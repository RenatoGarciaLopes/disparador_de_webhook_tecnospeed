{
  // Salvar arquivo: formata pelo Prettier e corrige ESLint
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },
  // Define o Prettier como formatador padronizado
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  // ESLint: validação em tempo real
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  // Para evitar formatação dupla
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "cSpell.words": [
    "Conectre",
    "dtos",
    "sequelize",
    "sequelizerc",
    "Tecnospeed"
  ],
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "tsconfig*, vite*, package-lock.json, pnpm-lock*, bun*, nest*",
    "docker-compose.yml": "Dockerfile*, .dockerignore, docker-compose*",
    "eslint*js": ".editorconfig, .prettier*, eslint*, biome*, commitlint*",
    ".env.local": ".env*",
    ".env": ".env*",
    "jest.config*": "jest*",
    "README.md": "*.md"
  },
  "prismaERDPreviewer.preferredTheme": "dark",
  "material-icon-theme.folders.associations": {
    "infrastructure": "server",
    "domain": "organism",
    "mappers": "pipe",
    "http": "api",
    "dtos": "interface",
    "use-cases": "tools",
    "hash": "keys",
    "openapi": "docs",
    "presenters": "views",
    "sequelize": "functions",
    "migrations": "database",
    "logger": "log",
    "tecnospeed": "contract",
    "setup": "config"
  },
  "material-icon-theme.files.associations": {
    "jest.integration.config.ts": "Jest",
    "app": "Makefile",
    "insomnia.http.yaml": "http"
  }
}
